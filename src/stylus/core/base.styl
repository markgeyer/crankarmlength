html
	box-sizing border-box
	height 100%

*
*:before
*:after
	box-sizing: inherit

body
	position absolute
	top 0
	right 0
	bottom 0
	left 0
	height 100%
	background-color white
	font-family "Helvetica Neue", Helvetica, Arial, sans-serif
	font-size 1.125rem
	line-height 1.5
	color hsl(220, 50%, 20%)
	
	@media mq-small
		font-size 1rem
	
	@media mq-medium
		font-size .875rem

h1
h2
h3
h4
	margin-top 0
	margin-bottom 2rem
	line-height 1.25

h1
	font-size 4rem

h2
	font-size 2rem

h3
	font-size 1.5rem

img
canvas
iframe
video
svg
select
textarea
	max-width 100%

a
	color hsl(220, 60%, 50%)
	text-decoration none
	transition 200ms color

	&:visited
		color hsla(220, 60%, 50%, .7)
		
	&:hover 
	&:active
		color hsl(220, 60%, 70%)

hr
	display block
	height 1px
	margin 2rem 0
	padding 0
	border 0
	border-top 1px solid #e5e5e5
	
dt
	font-weight 700
	
dd
	margin-left 0
	
label
	display block
	font-family inherit
	font-weight bold

	&.required:after
		content '*'
		color hsl(0, 60%, 50%)
		margin-left .25rem
		white-space nowrap

	&.radio
	&.checkbox
		font-weight 400
	
input[type='number']
	appearance none
	position relative
	margin 0 .25rem 0 0
	padding 0 .25rem 0 .5rem
	width 100%
	height 2rem
	max-width 5rem
	border 1px solid hsl(220, 50%, 90%)
	font-family inherit
	border-radius .25rem
	background-color white
	outline 0
	transition 200ms border-color

	&::-webkit-input-placeholder
		color hsl(220, 50%, 90%)

	&:-moz-placeholder
		color hsl(220, 50%, 90%)

	&::-moz-placeholder
		color hsl(220, 50%, 90%)

	&:-ms-input-placeholder
		color hsl(220, 50%, 90%)

	&:focus
		border-color hsl(220, 60%, 50%)

input[type='checkbox']
input[type='radio']
	appearance none
	width 1rem
	height 1rem
	margin-right .25rem
	border 1px solid hsl(220, 50%, 90%)
	background-color white
	outline 0
	transition 200ms background-color, 200ms border

input[type='checkbox']
	border-radius .25rem

	&:checked
		background-color hsl(220, 60%, 50%)
		box-shadow none
		border 1px solid transparent

		&:after
			display block
			content ''
			height 5px
			width 10px
			border-bottom 2px solid white
			border-left 2px solid white
			transform translate(2px,3px) rotate(-45deg)

input[type='radio']
	border-radius 50%

	&:checked
		background-color white
		box-shadow none
		border 5px solid hsl(220, 60%, 50%)
